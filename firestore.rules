rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if user is logged in
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // NEW: Check if the user's email is verified
    function isVerified() {
      return request.auth.token.email_verified == true;
    }
    
    // Check if the user's email domain matches the document's collegeDomain
    function isSameDomain(docData) {
      return request.auth.token.email.matches('.*@' + docData.collegeDomain);
    }

    // --- Collection Rules ---

    // 1. Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId;
      
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // 2. Posts Collection
    // SECURED: Added isVerified() to prevent unverified accounts from snooping
    match /posts/{postId} {
      allow read: if isAuthenticated() && isVerified() && isSameDomain(resource.data);
      allow create: if isAuthenticated() && isVerified() && 
                    isSameDomain(request.resource.data) &&
                    request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.authorId;

      // Comments Subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated() && isVerified();
        allow create: if isAuthenticated() && isVerified();
      }
    }

    // 3. Products Collection
    // SECURED: Added isVerified()
    match /products/{productId} {
      allow read: if isAuthenticated() && isVerified() && isSameDomain(resource.data);
      allow create: if isAuthenticated() && isVerified() && isSameDomain(request.resource.data);
      
      allow update, delete: if request.auth.uid == resource.data.sellerId || request.auth.uid == resource.data.authorId;
    }

    // 4. Orders Collection (Private to user)
    match /orders/{orderId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}